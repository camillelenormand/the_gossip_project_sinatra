<html>
  <head>
    <link rel="stylesheet" href="https://unpkg.com/tachyons@4.12.0/css/tachyons.min.css"/>
  </head>
  <body>
    <% erb :layout do %>
    <% end %>
      <article class="pa4 black-80 mb3">
      <form action='/gossips/new/' method='POST' accept-charset="utf-8" class="measure center">
       <fieldset id="sign_up" class="ba b--transparent ph0 mh0">
          <legend class="ph0 mh0 fw6 clip">Write a gossip</legend>
            <h3>Write your Gossip</h2>
            <div class="mt3">
              <label class="db fw4 lh-copy f6" for="email-address">Name <span class="normal black-60">(required)</span></label>
              <input class="pa2 input-reset ba bg-transparent w-100 measure" type="text" name='author'  id="gossip_author" required>
            </div>
            <div class="mt3">
              <label class="db fw4 lh-copy f6" for="email-address">Content <span class="normal black-60">(required)</label>
              <textarea class="pa2 input-reset ba bg-transparent w-100 measure" type="text" name='content'  id="gossip_content" required></textarea>
            </div>
          </fieldset>
          <div class="mt3"><input class="b ph3 pv2 input-reset ba b--black bg-transparent grow pointer f6" type="submit" value="Send"></div>
        </form>
        </article>
    </body>
</html>
